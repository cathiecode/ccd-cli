set -eo pipefail

URL=$3
CONTENT=$4

function show_usage () {
  echo "cus sandbox <URL> <CONTENT>"
}

if [ ! "${URL:+error}" ]; then
  echo "Please specify template."
  show_usage
  exit 1
fi

if [ ! "${CONTENT:+error}" ]; then
  echo "Please specify content."
  show_usage
  exit 1
fi


wget --method=POST --header="Content-Type: application/json" --body-data="{\"content\": \"$CONTENT\"}" "$URL"
